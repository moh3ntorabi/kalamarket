@using Application.Services.Banners
@model AddBannerDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Theme/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/Theme/assets/css/forms/switches.css">
<div class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4> ثبت بنر جدید  </h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">

            <form asp-action="create" asp-controller="banner" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="Name"> </label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Link"> </label>
                    <input type="text" class="form-control" asp-for="Link">
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Priority"> </label>
                    <input type="text" class="form-control" asp-for="Priority">
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">

                    <label asp-for="IsActive"> </label>
                    <div class="col-lg-3 col-md-3 col-sm-4 col-6">
                        <label class="switch s-icons s-outline  s-outline-primary  mb-4 mr-2">
                            @Html.CheckBoxFor(model => model.IsActive)
                            <span class="slider round"></span>
                        </label>
                    </div>

                </div>
                <div class="form-group mb-4">
                    <label asp-for="Position"> </label>
                    <select asp-for="Position" class="form-control" asp-items="@Html.GetEnumSelectList<Domain.Banners.Position>()"></select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="BannerImage"> </label>
                    <input type="file" class="form-control" asp-for="BannerImage" accept="image/*">
                    <span asp-validation-for="BannerImage" class="text-danger"></span>
                </div>

                <input type="submit" name="time" value="ثبت" class="btn btn-primary">
                <a asp-action="create" asp-controller="banner" class="btn btn-info">برگشت به لیست</a>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
