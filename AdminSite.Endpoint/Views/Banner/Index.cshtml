@using Application.Services.Banners
@using Application.Dtos
@model PaginatedItemsDto<BannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- BEGIN PAGE LEVEL CUSTOM STYLES -->
<link rel="stylesheet" type="text/css" href="~/Theme/plugins/table/datatable/datatables.css">
<link rel="stylesheet" type="text/css" href="~/Theme/plugins/table/datatable/dt-global_style.css">
<link rel="stylesheet" type="text/css" href="~/Theme/plugins/table/datatable/custom_dt_custom.css">
<!-- END PAGE LEVEL CUSTOM STYLES -->
<!-- BEGIN GLOBAL MANDATORY STYLES -->
<link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&amp;display=swap" rel="stylesheet">
<link href="~/Theme/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="~/Theme/assets/css/plugins.css" rel="stylesheet" type="text/css">
<!-- END GLOBAL MANDATORY STYLES -->
<!-- BEGIN PAGE LEVEL CUSTOM STYLES -->
<link rel="stylesheet" type="text/css" href="~/Theme/assets/css/forms/theme-checkbox-radio.css">
<link rel="stylesheet" type="text/css" href="~/Theme/assets/css/forms/theme-checkbox-radio.css">
<link href="~/Theme/plugins/lightbox/photoswipe.css" rel="stylesheet" type="text/css" />
<link href="~/Theme/plugins/lightbox/default-skin/default-skin.css" rel="stylesheet" type="text/css" />
<link href="~/Theme/plugins/lightbox/custom-photswipe.css" rel="stylesheet" type="text/css" />

<p>
    <a asp-action="Create" class="dt-button buttons-print btn">ثبت بنر جدید</a>
</p>

<div class="widget-content widget-content-area">
    <div class="table-responsive mb-4">
        <div id="style-3_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
            <div class="col-sm-12">
                <table id="tblbanner" class="table style-3  table-hover" role="grid">
                    <thead>
                        <tr role="row">
                            <th class="checkbox-column text-center"> شناسه بنر </th>
                            <th class="text-center">
                                تصویر بنر
                            </th>
                            <th>
                                نام بنر
                            </th>
                            <th>
                                لینک
                            </th>
                            <th>
                                وضعیت
                            </th>
                            <th>
                                موقعیت نمایش
                            </th>
                            <th class="text-center">
                                ترتیب نمایش
                            </th>
                            <th class="text-center">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr role="row">
                                <td class="checkbox-column text-center"> @Html.DisplayFor(modelItem => item.Id) </td>

                                <td class="demo-gallery">
                                    <a href="@Html.DisplayFor(modelItem => item.Image)" data-size="1600x1068" data-med="@Html.DisplayFor(modelItem => item.Image)" data-med-size="1024x683" data-author="Samuel Rohl">
                                        <img src="@Html.DisplayFor(modelItem => item.Image)" class="profile-img" alt="bannerimage">
                                    </a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Link)</td>
                                <td class="text-center">
                                    @if (item.IsActive == true)
                                    {
                                        <span class="shadow-none badge badge-primary">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="shadow-none badge badge-danger">غیرفعال</span>
                                    }

                                </td>

                                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                                <td>@Html.DisplayFor(modelItem => item.Priority)</td>

                                <td class="text-center">
                                    <ul class="table-controls">
                                        <li><a asp-action="edit" asp-controller="banner" asp-route-id="@item.Id" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="ویرایش"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 p-1 br-6 mb-1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                                        <li><a onclick="DeleteBanner('@item.Id')" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="حذف"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash p-1 br-6 mb-1"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></a></li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>


        </div>
        <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">

            <!-- Background of PhotoSwipe. It's a separate element, as animating opacity is faster than rgba(). -->
            <div class="pswp__bg"></div>

            <!-- Slides wrapper with overflow:hidden. -->
            <div class="pswp__scroll-wrap">
                <!-- Container that holds slides. PhotoSwipe keeps only 3 slides in DOM to save memory. -->
                <!-- don't modify these 3 pswp__item elements, data is added later on. -->
                <div class="pswp__container">
                    <div class="pswp__item"></div>
                    <div class="pswp__item"></div>
                    <div class="pswp__item"></div>
                </div>

                <!-- Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed. -->
                <div class="pswp__ui pswp__ui--hidden">

                    <div class="pswp__top-bar">

                        <!--  Controls are self-explanatory. Order can be changed. -->
                        <div class="pswp__counter"></div>
                        <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
                        <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
                        <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>

                        <!-- element will get class pswp__preloader--active when preloader is running -->
                        <div class="pswp__preloader">
                            <div class="pswp__preloader__icn">
                                <div class="pswp__preloader__cut">
                                    <div class="pswp__preloader__donut"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="pswp__caption">
                        <div class="pswp__caption__center"></div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>

<link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/sweetalert2/sweetalert2.min.js"></script>
<script src="~/Theme/assets/js/libs/jquery-3.1.1.min.js"></script>
<script src="~/Theme/plugins/table/datatable/datatables.js"></script>
<script src="~/Theme/plugins/lightbox/photoswipe.min.js"></script>
<script src="~/Theme/plugins/lightbox/photoswipe-ui-default.min.js"></script>
<script src="~/Theme/plugins/lightbox/custom-photswipe.js"></script>
<script>
    c3 = $('#tblbanner').DataTable({
        "oLanguage": {
            "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
            "sInfo": undefined,
            "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
            "sSearchPlaceholder": "جستجو کنید...",
            "sLengthMenu": "نتایج :  _MENU_",
        },
        "stripeClasses": [],
        "lengthMenu": [5, 10, 20, 50],
        "pageLength": 5
    });

    multiCheck(c3);
</script>
<script>

    function DeleteBanner(bannerid) {
        swal.fire({
            title: 'حذف بنر',
            text: "کاربر گرامی از حذف بنر مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#7cacbe',
            confirmButtonText: 'بله، حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {
                var postData = {
                    'Id': bannerid,
                };

                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "POST",
                    url: "banner/Delete",
                    data: postData,
                    success: function (data) {
                        if (data.isSuccess == true) {
                            swal.fire(
                                'موفق!',
                                data.message,
                                'success'
                            ).then(function (isConfirm) {
                                location.reload();
                            });
                        }
                        else {
                            swal.fire(
                                'هشدار!',
                                data.message,
                                'warning'
                            );
                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }
                });
            }
        })
    }
</script>


